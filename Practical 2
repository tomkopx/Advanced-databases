--Task 1.13

DROP TYPE job force;

CREATE TYPE job AS OBJECT (
	jobtitle VARCHAR2(20),
	job_ID INT,
	salary_amount INT,
	years_of_experience INT);

--Task 1.14

DROP TABLE job_table PURGE;
	
CREATE TABLE job_table OF job;

