--Task 1.3
	
SELECT p.pname.lastname, p.paddress.street_and_number.streetname
FROM peopleTable p
WHERE p.pname.firstname LIKE ('John') AND p.pname.lastname LIKE ('Smith');
	
--Task 1.4

SELECT *
FROM peopleTable p;

SELECT p.pname.lastname
FROM peopleTable p;

SELECT p.pname
FROM peopleTable p;

--Task 1.5

DROP TYPE Street force;
DROP TYPE Country force;
DROP TYPE Address force;	
	
CREATE TYPE Street AS OBJECT (
	streetnumber NUMBER,
	streetname VARCHAR2(30),
	flatnumber NUMBER );	

CREATE TYPE Country AS OBJECT (
	country VARCHAR2(30));
	
CREATE TYPE Address AS OBJECT (
	street Street,
	city VARCHAR2(30),
	postal_code VARCHAR2(10)
	country Country);
	
--Task 1.6

DROP TYPE Name force;
DROP TYPE Phone force;
DROP TYPE Street force;
DROP TYPE Country force;
DROP TYPE Address force;
DROP TABLE person_table PURGE;	

CREATE TYPE Name AS OBJECT (
	firstname VARCHAR2(20),
	middleinitial VARCHAR2(2),
	lastname VARCHAR(20));
	
CREATE TYPE Phone AS OBJECT (
	business NUMBER,
	home NUMBER,
	mobile NUMBER);
	
CREATE TYPE Street AS OBJECT (
	streetnumber NUMBER,
	streetname VARCHAR2(30),
	flatnumber NUMBER );	

CREATE TYPE Country AS OBJECT (
	country VARCHAR2(30));
	
CREATE TYPE Address AS OBJECT (
	streetname Street,
	city VARCHAR2(30),
	postal_code VARCHAR2(10),
	countryname Country);

--Task 1.7
	
CREATE TYPE person AS OBJECT (
	pname Name,
	pphone Phone,
	paddress Address);
	
--Task 1.8

CREATE TABLE person_table OF person;

--Task 1.9

