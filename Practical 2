--Task 1.10

ALTER TYPE person
ADD ATTRIBUTE (gender VARCHAR2(8)) cascade;

--Task 1.11

ALTER TYPE person NOT FINAL cascade;

CREATE TYPE employee UNDER person (
	emp_ID INT)
NOT FINAL;

--Task 1.12

